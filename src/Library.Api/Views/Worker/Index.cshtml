@using Library.DataAccess.Models;
@model List<Worker>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Workers </h2>
        </div>
        <div class="col-6 d-flex p-2 justify-content-end">
            <a asp-controller="Worker" asp-action="Create" class="btn btn-info d-flex p-2 justify-content-end">
                <i class="bi bi-plus-circle pl-1"></i>&nbsp;Add New Worker
            </a>
            
        </div>
    </div>
</div>
<hr class="bg-primary" />
<table class="table table-bordered table-striped" style="width:100%;">
    <thead>
        <tr>
            <th>Id</th>
            <th>Email</th>
            <th>Name</th>
            <th>Position</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }

        @foreach (var user in Model)
        {
            <tr>
                <td>@i</td>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.Position.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Worker" asp-action="Update" class="btn btn-primary" asp-route-id="@user.Id">
                            <i class="bi bi-pencil-square"></i>&nbsp;Edit
                        </a>
                        <a asp-controller="Worker" asp-action="Delete" class="btn btn-danger" asp-route-id="@user.Id">
                            <i class="bi bi-trash3-fill"></i>&nbsp;Delete
                        </a>
                    </div>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>
