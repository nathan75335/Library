@model LoginModel

@if (User.Identity is null && User.Identity.IsAuthenticated == false)
{
	<div class="card">
		<div class="card-header">
			<p class="card-text">
				Welcome back @User.Identity.Name
			</p>
			<a class="btn btn-primary" asp-controller="Home" asp-action="Index">Click here to get to the Catalog</a>
		</div>
	</div>
}
else
{
	<form asp-action="Login" method="post">
		<div class="border p-3 mt-4">
			<div class="row pb-2">
				<h2 class="text-secondary text-center">Login </h2>
				<hr class="bg-secondary" />
			</div>
			<div class="mb-3">
				<label asp-for="Email" class="form-label">Email :</label>
				<input asp-for="Email" class="form-control" placeholder="Enter your Email" />
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="Password" class="form-label">Password :</label>
				<input asp-for="Password" class="form-control" placeholder="Enter your password" />
				<span asp-validation-for="Password" class="text-danger"></span>
			</div>
			<button type="submit" class="btn btn-info" style="width:158px;">Submit</button>
			<a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:220px;">Back To Main Page</a>
		</div>
	</form>

}



@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}